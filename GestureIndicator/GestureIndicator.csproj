	<ItemGroup>
		<EmbeddedResource Include="Assets\*" />
	</ItemGroup>
    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
      <Exec Command="xcopy &quot;$(ProjectDir)obj\Release\net472\GestureIndicator.dll&quot; &quot;$(SolutionDir)RELEASE\&quot; /K /D /H /Y /I" />
